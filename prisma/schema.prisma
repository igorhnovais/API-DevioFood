generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id Int @id @default(autoincrement())
  image String
  name String @db.VarChar(50)
  price Int 
  code Int
  orders orders[]
}

model orders {
  id Int @id @default(autoincrement())
  productId Int
  nameCustumer String @db.VarChar(50)
  observation String
  transshipment Int
  total Int 
  drop Boolean
  description String
  aditional String
  quantity Int
  products products @relation(fields: [productId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  
}
